<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">

      <h1 class="text-center">Your Polls</h1>
      <hr>

      <table class="table table-hover table-striped">
        <colgroup>
          <col class="col-xs-9">
          <col class="col-xs-3">
        </colgroup>

        <thread>
          <tr>
            <th>Poll Title</th>
            <th></th>
          </tr>
        </thread>

        <tbody>
          <% if(!polls.length) { %>
          <tr>
            <td colspan="2" class="text-center">
            You have no polls
          </td>
        </tr>
      <% } %>

      <% polls.forEach(poll => { %>
      <tr>
        <td class="text-center">
        <a href="/polls/<%=poll._id %>?_method=DELETE" method="post">
          <button type="submit" class="btn btn-xs btn-danger">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </button>
      </form>
    </td>
  </tr>
<% }) %>
</tbody>
</table>
</div>
</div>
</div>

<% include ../partials/footer %>
