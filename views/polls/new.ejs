<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1 class="text-center"> New Poll </h1>
      <hr>

      <form action="/polls" method="post">
        <div class="form-group">
          <label for="title">Poll Title</label>
          <input id="title"
          type="text"
          name="poll[title]"
          class="form-control"
          placeholder="Poll Title"
          required>
        </div>

        <div class="form-group">
          <label for="options">Poll Options</label>
          <input id="options"
          type="text"
          name="poll[options][]"
          class="form-control"
          placeholder="First Option"
          required>

          <div class="form-group">
            <input type="text"
            name="poll[options][]"
            class="form-control"
            placeholder="Second Option"
            required>

          </div>

          <div class="text-center">
            <button id="more-options" type="button" class="btn btn-sm btn-default">
              <i class="fa fa-plus" aria-hidden="true"></i> Add More Options
            </button>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-lg btn-primary btn-block">
            <i class="fa fa-floppy-o" aria-hidden="true"></i> Submit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
</div>

<%- include('../partials/footer', { script: 'poll-extra-options'}) %>
