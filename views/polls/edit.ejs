<% include ../partials/header %>

<div class="container"
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h1 class="text-center"> Edit this Poll </h1>
    <hr>

    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
          <p class="form-control-static">
            <%= poll.title %>
          </p>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">Options </label>
        <div class="col-sm-10">
          <p class="form-control-static">
            <% poll.options.forEach(option => { %>
              <%= option.description %>;
              <% }); %>
            </p>

          </div>
        </div>
      </form>
<form action="/polls/<%=poll._id %>?_method=PUT" method="post">
  <div class="form-group">
    <input id="options"
      type="text"
      name="poll[options][]"
      class="form-control"
      placeholder="Extra Option"
      required>

      <div class="text-center">
        <button id="more-options" type="button" class="btn btn-sm btn-default">
          <i class="fa fa-plus" aria-hidden="true"></i> Add More options
        </button>
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-lg btn-primary btn-block">
        <i class="fa fa-floppy-o" aria-hidden="true"></i> Submit </button>
      </div>
    </form>
  </div>
</div>
</div>

<%- include('../partials/footer', { script: 'poll-extra-options'}) %>
